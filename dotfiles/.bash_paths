#!/bin/bash

# custom scripts
PATH="$HOME/.bin:$PATH"

# rbenv
RBENV_BIN="$HOME/.rbenv/bin"
if [ -d  "$RBENV_BIN" ]; then
  PATH="$RBENV_BIN:$PATH"
  eval "$(rbenv init -)"
fi

# heroku
HEROKU_BIN="/usr/local/heroku/bin"
if [ -d "$HEROKU_BIN" ]; then
  PATH="$HEROKU_BIN:$PATH"
fi

# postgres on Mac
POSTGRES_BIN="/Applications/Postgres.app/Contents/Versions/latest/bin"
if [ -d "$POSTGRES_BIN" ]; then
  PATH="$POSTGRES_BIN:$PATH"
fi

# go
export GOPATH=$HOME/Code/go
PATH="$PATH:$GOPATH/bin"
GO_BIN="/usr/local/go/bin"
if [ -d "$GO_BIN" ]; then
  PATH="$GO_BIN:$PATH"
fi

export PATH
