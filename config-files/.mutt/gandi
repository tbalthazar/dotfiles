# vim: filetype=muttrc

## Receive options.
set folder      = "~/Mail"
set spoolfile   = "+Gandi/INBOX"
set record      = "+Gandi/Sent"
set postponed   = "+Gandi/Drafts"
set trash       = "+Gandi/Trash"

## Send options.
set realname        = "Thomas Balthazar"
set my_smtp_server  = "mail.gandi.net"
set my_user         = $my_user_gandi
set smtp_url        = "smtp://$my_user@$my_smtp_server:587"
set smtp_pass       = $my_pwd_gandi

set from            = $my_email_gandi
set ssl_force_tls   = yes
set ssl_starttls    = no
