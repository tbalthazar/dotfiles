# vim: filetype=muttrc

## Receive options.
set folder      = "~/Mail"
set spoolfile   = "+Perso/INBOX"
set record      = "+Perso/Sent Items"
set postponed   = "+Perso/Drafts"
set trash       = "+Perso/Trash"

## Send options.
set realname        = "Thomas Balthazar"
set my_smtp_server  = $my_smtp_perso
set my_user         = $my_user_perso
set smtp_url        = "smtp://$my_user@$my_smtp_server:587"
set smtp_pass       = $my_pwd_perso

set from            = $my_email_perso
set ssl_force_tls   = yes
set ssl_starttls    = yes
