# get email addresses and passwords from gpg encrypted file
source "gpg -dq ~/.email-config.gpg |"

source ~/.mutt/mailboxes
# source ~/.mutt/gpg

set mailcap_path = ~/.mutt/mailcap

source ~/.mutt/perso

folder-hook 'Perso' 'source ~/.mutt/perso'

# appearance
# set sort              = threads                     
# set sort_aux          = reverse-last-date-received 
# set sort_aux          = reverse-last-date-received 
set sort              = reverse-last-date-received 
set timeout           = 3          # idle time before scanning
set mail_check        = 1       # minimum time between scans
set date_format       = "%b %d, %H:%M"
set index_format      = "[%Z]  %D  %-20.20F  %s"
# set pager_index_lines = 10 # number of index lines to show
# set pager_context     = 3  # number of context lines to show
set pager_stop        # don't go to next message automatically
set menu_scroll       # scroll in menus
set tilde             # show tildes like in vim
unset markers         # no ugly plus signs
set fast_reply = yes
set include = yes
set mark_old = no
set send_charset="utf-8"
set confirmappend = no
# set markers = no
set sleep_time = 0

macro index,pager Gi "<change-folder>=Fastmail/INBOX<enter>" "Go to Inbox"

# Colors, pasted from base16-builder generated file
source ~/.mutt/colors
source ~/.mutt/headers
source ~/.mutt/sidebar
source ~/.mutt/addresses

