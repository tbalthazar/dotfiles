# get email addresses and passwords from gpg encrypted file
source "gpg2 -dq ~/.email-pwds.gpg |"

# mailboxes file generated by offlineimap
source ~/.mutt/mailboxes

set alias_file= ~/.mutt/aliases
set sort_alias= alias
set reverse_alias=yes
source $alias_file

# folders
set folder      = "~/Mail"
set spoolfile   = "+Gandi/INBOX"
set record      = "+Gandi/Sent"
set postponed   = "+Gandi/Drafts"
set trash       = "+Gandi/Trash"

# smtp
set my_smtp_server  = "mail.gandi.net"
set my_user         = $my_email_gandi
set smtp_url        = "smtp://$my_user@$my_smtp_server:587"
set smtp_pass       = $my_pwd_gandi

# account
folder-hook Gandi set from=$my_email_gandi

# headers
# appearance
set sort              = threads                     
set sort_aux          = reverse-last-date-received 
set timeout           = 3          # idle time before scanning
set mail_check        = 1       # minimum time between scans
set date_format       = "%b %d, %I:%M"
set index_format      = "[%Z]  %D  %-20.20F  %s"
set pager_index_lines = 10 # number of index lines to show
set pager_context     = 3  # number of context lines to show
set pager_stop        # don't go to next message automatically
set menu_scroll       # scroll in menus
set tilde             # show tildes like in vim
unset markers         # no ugly plus signs
set fast_reply = yes
set include = yes
set mark_old = no
set send_charset="utf-8"
# set markers = no

# Colors, pasted from base16-builder generated file
source ~/.mutt/colors
source ~/.mutt/headers
