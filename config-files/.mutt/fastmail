# vim: filetype=muttrc

## Receive options.
set folder      = "~/Mail"
set spoolfile   = "+Fastmail/INBOX"
set record      = "+Fastmail/Sent Items"
set postponed   = "+Fastmail/Drafts"
set trash       = "+Fastmail/Trash"

## Send options.
set realname        = "Thomas Balthazar"
set my_smtp_server  = "smtp.fastmail.com"
set my_user         = $my_user_fastmail
set smtp_url        = "smtp://$my_user@$my_smtp_server:587"
set smtp_pass       = $my_pwd_fastmail

set from            = $my_email_fastmail
set ssl_force_tls   = yes
set ssl_starttls    = yes
